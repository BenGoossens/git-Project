@model Project_Krekelhof.ViewModels.UitleningViewModel

@{
    if (@Model.Id == 0)
    {
        ViewBag.Title = "Creëer Uitlening";
    }
    else
    {
        ViewBag.Title = "Editeer Uitlening";
    }
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>BoekViewModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Id, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EindeUitlening, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.EindeUitlening, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EindeUitlening, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            <label for="Item" class="control-label col-md-2">Item</label>
            <div class="col-md-10">
                @Html.DropDownList("Item", null, "--selecteer item--", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Item, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">

            <label for="Leerling" class="control-label col-md-2">Leerling</label>
            <div class="col-md-10">
                @Html.DropDownList("Leerling", null, "--selecteer leerling--", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.volledigeNaam, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsTerug, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsTerug)
                    @Html.ValidationMessageFor(model => model.IsTerug, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
