@model Project_Krekelhof.ViewModels.BoeksIndexViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Boeks.FirstOrDefault().Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Boeks.FirstOrDefault().Auteur)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Boeks.FirstOrDefault().Uitgeverij)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Boeks.FirstOrDefault().Isbn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Boeks.FirstOrDefault().Naam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Boeks.FirstOrDefault().Omschrijving)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Boeks)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Auteur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Uitgeverij)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Isbn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Naam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Omschrijving)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { @*id = item.Id*@ }) |
                @Html.ActionLink("Details", "Details", new { @*id = item.Id*@ }) |
                @Html.ActionLink("Delete", "Delete", new { @*id = item.Id*@ })
            </td>
        </tr>
    }

</table>