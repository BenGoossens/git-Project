<link href="~/Content/Leerlingen.css" rel="stylesheet" type="text/css" />

@model Project_Krekelhof.ViewModels.BoekIndexViewModel

<div id="modal-container" class="modal fade"
     tabindex="-1" role="dialog">
    <div class="modal-content">
    </div>
</div>
<style>
    .modal-content {
        width: 600px !important;
        margin: 30px auto !important;
    }
</style>



<table class="table" >
    <tr style="text-align:center;">
        <th>
            @Html.DisplayNameFor(model => model.Boeken.FirstOrDefault().Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Boeken.FirstOrDefault().Naam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Boeken.FirstOrDefault().Auteur)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Boeken.FirstOrDefault().Uitgeverij)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Boeken.FirstOrDefault().Omschrijving)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Boeken.FirstOrDefault().Leeftijd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Boeken.FirstOrDefault().Isbn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Boeken.FirstOrDefault().Beschikbaar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Boeken.FirstOrDefault().Categorie)
        </th>
        <th></th>
    </tr>

 
    @if (Request["beschikbaar"] == "beschikbaar")
    {
        foreach (var item in Model.Boeken)
        {
            if (item.Beschikbaar == true)
            {
                <tr id="tabelrijen">
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Naam)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Auteur)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Uitgeverij)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Omschrijving)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Leeftijd)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Isbn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Beschikbaar)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Categorie)
                    </td>
                    <td>

                        <a>
                            <img src="~/Images/Bewerken.png" style="width:10px; height:10px;" />
                            @Html.ActionLink("Aanpassen", "Edit", new { id = item.Id }) |

                        </a>
                        @Html.ActionLink("Verwijderen", "Delete", new { id = item.Id, @class = "Deleteknop" }) |
                        @Html.ActionLink("Uitlening", "Uitlenen", null, new { @class = "modal-link btn btn-success" })
                    </td>
                </tr>
            }

        }
    }
    else{
        
        foreach (var item in Model.Boeken)
        {
            <tr id="tabelrijen">
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Naam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Auteur)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Uitgeverij)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Omschrijving)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Leeftijd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Isbn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Beschikbaar)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categorie)
                </td>
                <td>

                    <a>
                        <img src="~/Images/Bewerken.png" style="width:10px; height:10px;" />
                        @Html.ActionLink("Aanpassen", "Edit", new { id = item.Id }) |

                    </a>
                    @Html.ActionLink("Verwijderen", "Delete", new { id = item.Id, @class = "Deleteknop" }) |
                    @Html.ActionLink("Uitlening", "Uitlenen", null, new { @class = "modal-link btn btn-success" })
                </td>
            </tr>
        }
    }


</table>
