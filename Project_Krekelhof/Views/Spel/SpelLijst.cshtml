<link href="~/Content/Leerlingen.css" rel="stylesheet" type="text/css" />

@model Project_Krekelhof.ViewModels.SpelIndexViewModel

<h3>@ViewBag.Selection</h3>

<table class="table">
    <tr style="text-align:center;">
        <th>
            @Html.DisplayNameFor(model => model.Spellen.FirstOrDefault().Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Spellen.FirstOrDefault().Naam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Spellen.FirstOrDefault().Omschrijving)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Spellen.FirstOrDefault().Beschikbaar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Spellen.FirstOrDefault().Uitgeverij)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Spellen.FirstOrDefault().Leeftijd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Spellen.FirstOrDefault().Categorie)
        </th>
        <th></th>
    </tr>
    
@if (Request["beschikbaar"] == "beschikbaar")
{
    foreach (var item in Model.Spellen)
    {
        if (item.Beschikbaar == true)
        {
            <tr id="tabelrijen">
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Naam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Omschrijving)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Beschikbaar)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Uitgeverij)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Leeftijd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categorie)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    }
}
else
{
    foreach (var item in Model.Spellen)
    {
            <tr id="tabelrijen">
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Naam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Omschrijving)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Beschikbaar)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Uitgeverij)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Leeftijd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categorie)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
    }
}
</table>
