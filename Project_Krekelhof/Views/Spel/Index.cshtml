<link href="~/Content/Leerlingen.css" rel="stylesheet" type="text/css" />

@model Project_Krekelhof.ViewModels.SpelIndexViewModel

@{
    ViewBag.Title = "SpelLijst";
}

<h3 style="padding-top:40px; margin-bottom:100px; font-size: 50px;">@ViewBag.Selection</h3>

@using (Html.BeginForm())
{
    <p style="float:left">
        @Html.TextBox("zoekstring")
        <input type="submit" id="submitknop" value="Zoek" />
    </p>
}


<form method="post" style="float:left">
    <p style="float:left; padding-left:10px; padding-right:5px;">
        Alleen beschikbare spelletjes
    </p>
    <input type="checkbox" name="beschikbaar" value="beschikbaar">
    <input type="submit" value="Zoek" />

</form>

<p style="float:right">
    @Html.ActionLink("Nieuw spel toevoegen", "Create")
    <img style="height:25px" src="~/Images/Toevoegen.png" />
</p>

<div>
    @Html.Partial("SpelLijst", Model)
</div>

@Scripts.Render("~/Scripts/checkbox.js")